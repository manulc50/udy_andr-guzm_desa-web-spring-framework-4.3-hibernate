<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans	
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context.xsd">

	<!-- habilitamos el uso de anotaciones -->
	<!-- Nota: Si usamos el elemento "context:component-scan" con el paquete base o raíz, podemos omitir, de manera opcional, este elemento porque ya se incluye en el elemento "context:component-scan" y sería redundante -->
	<!-- <context:annotation-config /> -->
	
	<!-- Indicamos el paquete base o raíz desde donde se tiene que escanear en busca de clases con anotaciones de Spring -->
	<context:component-scan base-package="com.bolsadeideas.ejemplos"></context:component-scan>

</beans>
